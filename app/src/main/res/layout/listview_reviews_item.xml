<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/listview_reviews_image_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginRight="10dp" />

    <ImageView
        android:contentDescription="@string/content_description_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listview_reviews_image_star1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_reviews_image_avatar"
        android:layout_toEndOf="@+id/listview_reviews_image_avatar"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:contentDescription="@string/content_description_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listview_reviews_image_star2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_reviews_image_star1"
        android:layout_toEndOf="@+id/listview_reviews_image_star1"
        />

    <ImageView
        android:contentDescription="@string/content_description_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listview_reviews_image_star3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_reviews_image_star2"
        android:layout_toEndOf="@+id/listview_reviews_image_star2"
        />

    <ImageView
        android:contentDescription="@string/content_description_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listview_reviews_image_star4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_reviews_image_star3"
        android:layout_toEndOf="@+id/listview_reviews_image_star3"
        />

    <ImageView
        android:contentDescription="@string/content_description_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listview_reviews_image_star5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listview_reviews_image_star4"
        android:layout_toEndOf="@+id/listview_reviews_image_star4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_reviews_text_comment"
        android:textColor="@android:color/black"
        android:layout_below="@+id/listview_reviews_image_star1"
        android:layout_toRightOf="@+id/listview_reviews_image_avatar"
        android:layout_alignRight="@+id/listview_reviews_image_star5"
        android:layout_alignEnd="@+id/listview_reviews_image_star5"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_reviews_text_name"
        android:layout_below="@+id/listview_reviews_image_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listview_reviews_image_avatar"
        android:layout_alignEnd="@+id/listview_reviews_image_avatar"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@android:color/black" />
</RelativeLayout>