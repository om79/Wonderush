<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup4screen_textview_text1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="13dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginscreen_edittext_email"
            android:background="@drawable/style_rectangle_edittext_new"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/black"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable= "@null"
            android:layout_marginBottom="20dp"
            android:textSize="19sp"
            android:padding="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup2screen_textview_text2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup2screen_textview_text3"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="13dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginscreen_edittext_password"
            android:background="@drawable/style_rectangle_edittext_new"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable= "@null"
            android:layout_marginBottom="5dp"
            android:padding="13dp"
            android:textSize="19sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:id="@+id/signup2screen_button_continue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/head_pink"
            android:padding="13dp"
            android:layout_marginBottom="30dp" />
    </LinearLayout>
</RelativeLayout>