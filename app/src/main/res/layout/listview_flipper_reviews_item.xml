<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pink1"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/listview_flipper_reviews_image_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/listview_flipper_reviews_image_star1"
        android:layout_below="@+id/listview_flipper_reviews_text_comment"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_avatar"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_avatar"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/listview_flipper_reviews_image_star2"
        android:layout_below="@+id/listview_flipper_reviews_text_comment"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_star1"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_star1"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/listview_flipper_reviews_image_star3"
        android:layout_below="@+id/listview_flipper_reviews_text_comment"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_star2"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_star2"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/listview_flipper_reviews_image_star4"
        android:layout_below="@+id/listview_flipper_reviews_text_comment"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_star3"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_star3"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/listview_flipper_reviews_image_star5"
        android:layout_below="@+id/listview_flipper_reviews_text_comment"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_star4"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_star4"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/listview_flipper_reviews_image_dot1"
        android:layout_below="@+id/listview_flipper_reviews_image_star1"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_avatar"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_avatar"
        android:layout_margin="2dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/listview_flipper_reviews_image_dot2"
        android:layout_below="@+id/listview_flipper_reviews_image_star1"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_dot1"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_dot1"
        android:layout_margin="2dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/listview_flipper_reviews_image_dot3"
        android:layout_below="@+id/listview_flipper_reviews_image_star1"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_dot2"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_dot2"
        android:layout_margin="2dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/listview_flipper_reviews_image_dot4"
        android:layout_below="@+id/listview_flipper_reviews_image_star1"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_dot3"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_dot3"
        android:layout_margin="2dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/listview_flipper_reviews_image_dot5"
        android:layout_below="@+id/listview_flipper_reviews_image_star1"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_dot4"
        android:layout_toEndOf="@+id/listview_flipper_reviews_image_dot4"
        android:layout_margin="2dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_flipper_reviews_text_name"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_avatar"
        android:layout_alignRight="@+id/listview_flipper_reviews_image_star5"
        android:layout_alignEnd="@+id/listview_flipper_reviews_image_star5"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_flipper_reviews_text_comment"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/listview_flipper_reviews_text_name"
        android:layout_toRightOf="@+id/listview_flipper_reviews_image_avatar"
        android:layout_alignRight="@+id/listview_flipper_reviews_image_star5"
        android:layout_alignEnd="@+id/listview_flipper_reviews_image_star5"
        android:textSize="14sp" />

</RelativeLayout>