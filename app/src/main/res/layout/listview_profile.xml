<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.programize.wonderush.Activities.Profile.Profile1"
    app:layout_scrollFlags="scroll|enterAlways"
    app:layout_collapseMode="pin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/pink1"
        android:id="@+id/profile1screen_relative_avatar">

        <ImageView
            android:contentDescription="@string/content_description_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/profile1screen_image_bigimage"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#66d12b54" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile1screen_image_smallimage_back"
            android:background="@drawable/circle_border"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/profile1screen_image_smallimage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/profile1screen_relative_avatar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/profile1screen_linear_info"
        android:background="@drawable/style_gradientcolor_profile">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile1screen_textview_username"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile1screen_textview_location"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/profile1screen_linear_info"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile1screen_linear_stats"
        android:background="@color/pink1"
        android:padding="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile1screen_textview_number_xp"
                android:layout_gravity="center"
                android:textSize="45sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiences"
                android:id="@+id/profile1screen_textview_experiences"
                android:layout_gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile1screen_textview_num_badges"
                android:layout_gravity="center"
                android:textSize="45sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:id="@+id/profile1screen_textview_badges"
                android:layout_gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile1screen_textview_num_bucket"
                android:layout_gravity="center"
                android:textSize="45sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bucket Listed"
                android:id="@+id/profile1screen_textview_bucket"
                android:layout_gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
