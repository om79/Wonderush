<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.programize.wonderush.Activities.Browsing.Categories"
    android:background="@color/blue_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/head_pink"
        android:gravity="center"
        android:id="@+id/bookingscreen_linear_head">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:id="@+id/categoriesscreen_textview_head"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:contentDescription="@string/content_description_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/categoriesscreen_imageview_backarrow"
        android:layout_below="@+id/bookingscreen_linear_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginTop="-45dp"
        android:padding="10dp" />

    <GridView
        android:id="@+id/categoriesscreen_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:numColumns="2"
        android:padding="5dp"
        android:layout_below="@+id/bookingscreen_linear_head"
        android:scrollbars="none"/>

</RelativeLayout>
