<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head_pink">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go forth my child!"
            android:id="@+id/signup4screen_textview_text1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are you waiting for? This"
            android:id="@+id/signup4screen_textview_text2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="city isn't just for sitting around in"
            android:id="@+id/signup4screen_textview_text3"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="60dp"
            android:gravity="center" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="LET'S GO"
            android:id="@+id/signup4screen_button_continue"
            android:gravity="center"
            android:textColor="@color/head_pink"
            android:textSize="20sp"
            android:background="@color/white"
            android:padding="13dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />
    </LinearLayout>
</RelativeLayout>