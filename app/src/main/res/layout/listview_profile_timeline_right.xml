<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/blue_dark"
    android:id="@+id/listviewprofile_relative_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/listviewprofile_imageview_event"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/circle_border"
        android:padding="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/invitescreen_view_line1"
        android:background="@color/pink1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/listviewprofile_view_line3"
        android:layout_toLeftOf="@+id/listviewprofile_imageview_event"
        android:layout_toStartOf="@+id/listviewprofile_imageview_event" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/listviewprofile_view_dot"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_dot"/>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/pink1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/listviewprofile_view_dot"
        android:id="@+id/listviewprofile_view_line2" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/pink1"
        android:id="@+id/listviewprofile_view_line3"
        android:layout_alignLeft="@+id/listviewprofile_view_line2"
        android:layout_alignStart="@+id/listviewprofile_view_line2"
        android:layout_above="@+id/listviewprofile_view_dot" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listviewprofile_text_type"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listviewprofile_text_date"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>