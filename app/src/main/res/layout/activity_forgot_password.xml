<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    tools:context="com.programize.wonderush.Activities.ForgotPassword"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email"
            android:id="@+id/forgotscreen_textview_text1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/forgotscreen_edittext_1"
            android:background="@drawable/style_rectangle_edittext_new"
            android:hint="E-mail Addess"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/black"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="SEND EMAIL"
            android:id="@+id/forgotscreen_button_1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/head_pink" />
    </LinearLayout>
</RelativeLayout>
