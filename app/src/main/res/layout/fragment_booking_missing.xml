<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ONE STEP AWAY"
        android:id="@+id/fragment_booking_missing_text_head"
        android:layout_gravity="center_horizontal"
        android:textSize="19sp"
        android:textColor="@color/pink2"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You&apos;re about to make your first booking, which is awesome! Before you do, though, you need to complete your registration by adding your card details."
        android:id="@+id/fragment_booking_missing_text_paragraph1"
        android:textSize="15sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Once you’re a member you can book and enjoy unlimited handpicked things to do across London for just £29 a month. Not the commitment type? No problem. Cancel anytime."
        android:id="@+id/fragment_booking_missing_text_paragraph2"
        android:textSize="15sp"
        android:layout_marginBottom="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Billing Details"
        android:id="@+id/fragment_booking_missing_text_billing"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="3dp"
        android:padding="5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/fragment_booking_missing_text_cancel"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="3dp"
        android:padding="5dp" />

</LinearLayout>