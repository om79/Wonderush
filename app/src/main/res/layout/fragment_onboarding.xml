<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member ? Login"
        android:id="@+id/fragment_onboarding_text_login_invisible"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_onboarding_video"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_below="@id/fragment_onboarding_text_login_invisible"
        android:layout_above="@+id/fragment_onboarding_view_50dp_invisible"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/fragment_onboarding_view_50dp_invisible"
        android:background="@color/white"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/fragment_onboarding_text_head"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/fragment_onboarding_text_description"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/fragment_onboarding_text_description2"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_gradientcolor_onboarding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="22sp"
        android:id="@+id/fragment_onboarding_text_signup_invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="35dp"
        android:visibility="invisible"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/fragment_onboarding_view_50dp_invisible"
        android:layout_above="@+id/fragment_onboarding_text_signup_invisible"
        android:visibility="invisible"/>


</RelativeLayout>